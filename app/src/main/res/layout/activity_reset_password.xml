<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/colorPrimary" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/layout_toolbar" />
    <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/padding_left_28dp" android:paddingRight="@dimen/padding_right_28dp" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/txt_reset" android:textColor="@color/txt_reset" android:gravity="center" android:paddingTop="@dimen/padding_top_67dp" android:paddingBottom="@dimen/padding_bottom_68dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/txt_reset" />
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <TextView android:textSize="@dimen/txt_reset" android:textColor="@color/new_password" android:paddingBottom="@dimen/padding_bottom_4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/new_password" />
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <EditText android:textSize="@dimen/txt_reset" android:textColor="@color/new_password" android:textColorHint="@color/new_password" android:id="@id/txt_new_password" android:background="@android:color/transparent" android:paddingBottom="@dimen/padding_bottom_4dp" android:layout_width="@dimen/nol_dp" android:layout_height="wrap_content" android:hint="@string/password_" android:singleLine="true" android:layout_weight="1.0" android:inputType="textPassword" android:imeOptions="actionDone" />
                <ImageView android:id="@id/img_new_password" android:visibility="gone" android:layout_width="@dimen/width_10dp" android:layout_height="@dimen/height_10dp" android:src="@mipmap/ico_error" android:scaleType="fitXY" />
                <ImageButton android:id="@id/img_show_pass" android:background="@android:color/transparent" android:layout_width="@dimen/width_24dp" android:layout_height="@dimen/height_24dp" android:src="@mipmap/group_6_inactive" android:scaleType="fitXY" />
            </LinearLayout>
            <View android:background="@color/under_txt_line_color" android:layout_width="fill_parent" android:layout_height="@dimen/height_1dp" />
            <TextView android:textSize="@dimen/txt_error" android:textColor="@color/txt_color_error" android:gravity="right" android:id="@id/txt_password_error" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/error_sampple" />
            <TextView android:textSize="@dimen/txt_reset" android:textColor="@color/new_password" android:paddingTop="@dimen/padding_top_15dp" android:paddingBottom="@dimen/padding_bottom_4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/re_type_new_password" />
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <EditText android:textSize="@dimen/txt_reset" android:textColor="@color/new_password" android:textColorHint="@color/new_password" android:id="@id/txt_new_password_retype" android:background="@android:color/transparent" android:paddingBottom="@dimen/padding_bottom_4dp" android:layout_width="@dimen/nol_dp" android:layout_height="wrap_content" android:hint="@string/password_" android:singleLine="true" android:layout_weight="1.0" android:inputType="textPassword" android:imeOptions="actionDone" />
                <ImageView android:id="@id/img_new_password_retype" android:visibility="gone" android:layout_width="@dimen/width_10dp" android:layout_height="@dimen/height_10dp" android:src="@mipmap/ico_error" android:scaleType="fitXY" />
                <ImageButton android:id="@id/img_show_pass_conf" android:background="@android:color/transparent" android:layout_width="@dimen/width_24dp" android:layout_height="@dimen/height_24dp" android:src="@mipmap/group_6_inactive" android:scaleType="fitXY" />
            </LinearLayout>
            <View android:background="@color/under_txt_line_color" android:layout_width="fill_parent" android:layout_height="@dimen/height_1dp" />
            <TextView android:textSize="@dimen/txt_error" android:textColor="@color/txt_color_error" android:gravity="right" android:id="@id/txt_type_password_error" android:paddingBottom="@dimen/padding_bottom_15dp" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/error_sampple" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="bottom" android:orientation="vertical" android:paddingLeft="@dimen/padding_left_28dp" android:paddingRight="@dimen/padding_right_28dp" android:paddingBottom="@dimen/padding_bottom_15dp" android:layout_width="fill_parent" android:layout_height="@dimen/nol_dp" android:layout_weight="1.0">
        <Button android:textSize="@dimen/btn_next_register_txt_size" android:textColor="@color/white_color" android:id="@id/btn_done" android:background="@drawable/next_register" android:layout_width="fill_parent" android:layout_height="@dimen/height_48dp" android:text="@string/done" />
    </LinearLayout>
</LinearLayout>